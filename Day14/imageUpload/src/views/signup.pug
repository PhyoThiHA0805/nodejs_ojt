doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Sign Up 
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    body
        .container(style="width: 500px").mt-5
            h3(style="text-align: center") Sign Up Form 
            
            if (message)
                if(success = true)
                    p.message.alert.alert-success #{message}
                else
                    p.message.alert.alert-danger #{message}
                    
            form(action="http://localhost:3000/user/signup" method="POST" enctype="multipart/form-data").mt-3
                label(for='fileUpload') Select a file:
                input#file.form-control(type='file', name='fileUpload')
                label(for='username') Username:
                input#username.form-control(type='text', name='username')
                br
                label(for='email') Email:
                input#email.form-control(type='email', name='email')
                br
                label(for='password') Password:
                input#password.form-control(type='password', name='password')
                br
                input.btn.btn-primary(type='submit', value='Sign Up')
                
script.
  setTimeout(function() {
    const message = document.querySelector('.message');
    message.remove();
  }, 2000);
